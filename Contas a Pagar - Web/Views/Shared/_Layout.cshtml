<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Contas a Pagar - AEDB</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="@Url.Content("/Scripts/clock.js")" ></script>
</head>
<body onload="startTime(); getDate();">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Contas a Pagar - AEDB", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href='@Url.Action("Index", "Home")'>
                    <img src='@Url.Content("~/Content/Images/AEDB.png")' />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav nav-stacked">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Cadastros <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Fornecedores", "Index", "Fornecedors")</li>
                                <li>@Html.ActionLink("Materiais", "Index", "Materials")</li>
                                <li>@Html.ActionLink("Setores", "Index", "Setors")</li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav nav-stacked">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Cadastros bancários<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Agências", "Index", "Agencias")</li>
                                <li>@Html.ActionLink("Contas Correntes", "Index", "ContaCorrentes")</li>
                                <li>@Html.ActionLink("Bancos", "Index", "Bancoes")</li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav nav-stacked">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">Cadastros financeiros<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Despesas", "Index", "Despesas")</li>
                                <li>@Html.ActionLink("Lançamento no Plano de Contas", "Index", "Lancamentoes")</li>
                                <li>@Html.ActionLink("Pagamento", "Index", "Pagamentoes")</li>
                                <li>@Html.ActionLink("Plano de Contas", "Index", "PlanoContas")</li>
                            </ul>
                        </li>
                    </ul>
                <ul class="nav navbar-nav nav-stacked">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Movimentação<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Fornecimento de Material", "Index", "FornecimentoMaterials")</li>
                            <li>@Html.ActionLink("Solicitação de Material", "Index", "SolicitacaoMaterials")</li>
                            <li>@Html.ActionLink("Aprovar Solicitação", "NaoAprovados", "SolicitacaoMaterials")</li>
                            <li>@Html.ActionLink("Cancelar Fornecimento", "NaoCancelados", "FornecimentoMaterials")</li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Principal", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                    <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                </ul>
                <div class="clearfix visible-lg">@Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <p id="txt" style="text-align:right; display:inline-block; float:right"></p>
        <p style="text-align:right; display:inline-block; float:right"><strong>|</strong></p>
        <p id="date" style="text-align:right; display:inline-block; float:right"></p>
        <footer>
            <p>&copy; @DateTime.Now.Year - SI AEDB 2013</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
